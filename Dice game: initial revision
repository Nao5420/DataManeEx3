#include <stdlib.h>
#include <time.h>
#include <stdio.h>
#include <unistd.h>

int main(){
    char name[100];
    int n,m;

    printf("What is your name?\n");
    printf("> ");
    scanf("%s",name);
    printf("Hello, %s!\n",name);
    
    srand((unsigned)time(NULL));
    n = rand()%6+1;
    m = rand()%6+1;
    printf("Rolling dice...\n");
    
    printf("Die 1: %d\n",n);
    printf("Die 2: %d\n",m);
    printf("Total value: %d\n",n+m);

    return 0;
}
